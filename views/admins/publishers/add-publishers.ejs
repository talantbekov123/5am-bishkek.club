<!DOCTYPE html>
<html lang="RU">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no">
    <title>ADMIN | TUTORS</title>
    <link rel="icon" type="image/x-icon" href="" />
    <!-- BEGIN GLOBAL MANDATORY STYLES -->
    <link href="https://fonts.googleapis.com/css?family=Nunito:400,600,700" rel="stylesheet">
    <link href="../admins/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="../admins/assets/css/plugins.css" rel="stylesheet" type="text/css" />
    <!-- END GLOBAL MANDATORY STYLES -->
    <link href="../admins/assets/css/scrollspyNav.css" rel="stylesheet" type="text/css" />
</head>

<body data-spy="scroll" data-target="#navSection" data-offset="100">

    <!--  BEGIN NAVBAR  -->
    <%- include('../admin-header.ejs', {path: './'}); %>
    <!--  END NAVBAR  -->


    <!--  BEGIN MAIN CONTAINER  -->
    <div class="main-container" id="container">

        <div class="overlay"></div>
        <div class="search-overlay"></div>

        <!--  BEGIN SIDEBAR  -->
        <%- include('../admin-sidebar.ejs', {path: './'}); %>
        <!--  END SIDEBAR  -->
        <div id="content" class="main-content">
            <div class="container">
                <div class="col-lg-12 layout-spacing layout-top-spacing">
                    <div class="statbox widget box box-shadow">
                        <% if(!publisher) { %>
                        <div class="widget-content widget-content-area col-xl-12 col-md-12 col-sm-12 col-12">
                            <div class="row">
                                <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                    <h5>Добавить издательство</h5>
                                    <% if(message) { %>
                                        <%= message %>
                                    <% } %>
                                    <br>
                                    <br>

                                </div>
                            </div>

                            <form method="POST" action="/publishers" enctype="multipart/form-data">
                                <input type="hidden" value="" name="_id">
                                <div class="form-group mb-3">
                                    <input required='true' value="" name="title" type="text" class="form-control"
                                        placeholder="Название издателя">
                                </div>
                                <div class="form-group mb-3">
                                    <div class="form-group mb-3">
                                        <label>
                                            Загрузите логотип издательства
                                        </label>
                                        <input required='true' class="form-control" name="cover" type="file">
                                    </div>
                                </div>

                                <input placeholder="Html" class="btn btn-primary mt-3" name="image" type="submit"
                                    required="true" value="Добавить издателя">

                            </form>
                        </div>
                        <% } else { %>
                            <div class="widget-content widget-content-area col-xl-12 col-md-12 col-sm-12 col-12">
                                <div class="row">
                                    <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                        <h5>Редактировать издателя</h5>
                                        <% if(message) { %>
                                            <%= message %>
                                        <% } %>
                                        <br>
                                        <br>
    
                                    </div>
                                </div>
    
                                <form method="POST" action="/publishers?_method=PUT" enctype="multipart/form-data">
                                    <input type="hidden" value="<%= publisher._id %>" name="_id">
                                    <div class="form-group mb-3">
                                        <input required='true' value="" name="title" type="text" class="form-control"
                                            placeholder="Название издателя">
                                    </div>
                                    <div class="form-group mb-3">
                                        <div class="form-group mb-3">
                                            <label>
                                                Загрузите логотип издательства
                                            </label>
                                            <input class="form-control" name="cover" type="file">
                                        </div>
                                    </div>
    
                                    <input placeholder="Html" class="btn btn-primary mt-3" name="image" type="submit"
                                        required="true" value="Редактировать издателя">
    
                                </form>
                            </div>
                            <% } %>
                    </div>

                </div>

            </div>
            <div class="footer-wrapper" style="margin-top: 50px;">
            </div>
        </div>
    </div>
    <!-- END MAIN CONTAINER -->

    <!-- BEGIN GLOBAL MANDATORY SCRIPTS -->
    <%- include('../admin-footer.ejs', {path: './'}); %>
</body>

</html>